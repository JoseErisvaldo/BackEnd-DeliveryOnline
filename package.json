{
  "name": "nestjs-typeorm-auth",
  "version": "1.0.0",
  "description": "Minimal NestJS + TypeORM + Postgres + Docker project with JWT auth",
  "scripts": {
    "start": "docker compose up -d && nest start --watch",
    "build": "tsc -p tsconfig.build.json",
    "start:prod": "npx typeorm-ts-node-commonjs migration:run -d dist/database/data-source.js && node dist/main.js",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d dist/database/data-source.js",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d dist/database/data-source.js",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d dist/database/data-source.js",
    "migration:create": "typeorm-ts-node-commonjs migration:create -d dist/database/data-source.js"
  },
  "dependencies": {
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  }
}
